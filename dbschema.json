{
    "db_name": "Thundote",
    "db_file": "data/Thundote.db",
    "version": 2,
    "maps": {
        "users/.+/data.json": {
            "to_table": [{
                    "node": "notes",
                    "table": "notes"
                },
                {
                    "node": "shared",
                    "table": "shared"
                },
                {
                    "node": "extra_data",
                    "table": "extra_data"
                }
            ]
        },
        "users/.+/content.json": {
            "to_json_table": [
                "cert_user_id"
            ],
            "file_name": "data.json"
        }
    },
    "tables": {
        "json": {
            "cols": [
                ["json_id", "INTEGER PRIMARY KEY AUTOINCREMENT"],
                ["directory", "TEXT"],
                ["file_name", "TEXT"],
                ["cert_user_id", "TEXT"]
            ],
            "indexes": ["CREATE UNIQUE INDEX path ON json(directory, file_name)"],
            "schema_changed": 3
        },
        "notes": {
            "cols": [
                ["note_id", "INTEGER PRIMARY KEY AUTOINCREMENT"],
                ["uuid", "TEXT UNIQUE"],
                ["title", "TEXT"],
                ["body", "TEXT"],
                ["lastedited", "INTEGER"],
                ["encrypted", "BOOLEAN"],
                ["json_id", "INTEGER REFERENCES json (json_id)"]
            ],
            "indexes": ["CREATE UNIQUE INDEX note_key ON notes(json_id, uuid)"],
            "schema_changed": 5
        },
        "shared": {
            "cols": [
                ["shared_id", "INTEGER PRIMARY KEY AUTOINCREMENT"],
                ["uuid", "TEXT"],
                ["with", "TEXT"],
                ["json_id", "INTEGER REFERENCES json (json_id)"]
            ],
            "indexes": ["CREATE UNIQUE INDEX shared_key ON shared(json_id, uuid)"],
            "schema_changed": 3
        },
        "extra_data": {
            "cols": [
                ["public_key", "TEXT"],
                ["auth_address", "TEXT"],
                ["json_id", "INTEGER REFERENCES json (json_id)"]
            ],
            "indexes": ["CREATE UNIQUE INDEX extra_data_key ON extra_data(json_id)"],
            "schema_changed": 4
        }
    }
}